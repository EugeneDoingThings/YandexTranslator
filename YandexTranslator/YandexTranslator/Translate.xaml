<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YandexTranslator.Translate"
             Title="Translate"
             >
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Spacing="42" Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Label  x:Name="FirstLang" Text="Английский" Margin="0, 15, 0, 0" HorizontalOptions="Start" />
                <Button Text="en-ru" BackgroundColor="#1abc9c" Clicked="ChangeLang" Margin="0, 0, 17, 0" HorizontalOptions="Center"  />
                <Label  x:Name="SecondLang" Text="Русский" Margin="0, 15, 0, 0" HorizontalOptions="End" />
            </StackLayout>
            <Editor Text="{Binding Word}"/>
            <Button Text="Перевести"  
                    Command="{Binding Translate}" BackgroundColor="#1abc9c"/>
            <Label Text="{Binding Output}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>